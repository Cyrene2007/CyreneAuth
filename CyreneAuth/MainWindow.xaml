<Window
    x:Class="CyreneAuth.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CyreneAuth"
    Title="CyreneAuth">

    <NavigationView
        x:Name="MainNavigationView"
        AlwaysShowHeader="True"
        IsSettingsVisible="False"
        IsBackButtonVisible="Collapsed"
        SelectionChanged="MainNavigationView_SelectionChanged">
        <Frame x:Name="ContentFrame"/>
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Home" Content="主页" Tag="HomePage" />
            <NavigationViewItem Icon="Account" Content="账号" Tag="AccountPage" />
            <NavigationViewItem Icon="Setting" Content="设置" Tag="SettingsPage" />
        </NavigationView.MenuItems>
    </NavigationView>
</Window>
