<Page
    x:Class="CyreneAuth.Pages.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CyreneAuth.Pages.Views">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Image -->
        <Border
            Grid.Row="0"
            Margin="20"
            CornerRadius="15"
            Background="LightGray"
            BorderBrush="Gray"
            BorderThickness="2">

            <Image
                x:Name="MainImage" 
                Stretch="UniformToFill"
                Source="ms-appx:///Assets/BackGround.jpg"/>
        </Border>

        <!-- Text -->
        <StackPanel
            Grid.Row="1" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">

            <TextBlock Text="首页" 
                FontSize="32" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,10"/>

            <TextBlock Text="欢迎使用 CyreneAuth" 
                FontSize="16" 
                HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>